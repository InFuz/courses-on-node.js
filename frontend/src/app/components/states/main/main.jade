#login-form
  .login_logo
    a(
    )
      img.logo(
        src="app/components/images/header_logo.png"
        alt="header_logo.png"
      )
  h1 АВТОРИЗАЦИЯ
  fieldset
    form(
      name='loginForm'
      novalidate
      data-ng-submit='vm.login(vm.user.username, vm.user.password)'
    )
      input(
        type='text'
        data-ng-model='vm.user.username'
        data-ng-model-options="{debounce: 400}"
        placeholder='Логин'
        required
      )
      input(
        type='password'
        data-ng-model='vm.user.password'
        data-ng-model-options="{debounce: 400}"
        placeholder='Пароль'
        required
      )
      input(
        type='submit'
        value='ВОЙТИ'
      )
